<h1>Add a subcription to <%= @patient.first_name %> <%= @patient.last_name %></h1>

<%= form_for [@patient, @prescription] do |f| %>
    <% if @prescription.errors.any? %>
        <% @prescription.errors.full_messages.each do |message| %>
            <p class="errors"><%= message %><p>
        <% end %>
    <% end %>


    <%= f.label :medication %>
    <%= f.select :medication, [["Advil"], ["Cough Syrup"], ["Ibuprofen"]] %>
    <br>
    <%= f.label :dosage %>
    <%= f.text_field :dosage %>
    <br>
    <%= f.label :schedule %>
    <%= f.text_field :schedule %>
    <br>
    <%= f.label :starts %>
    <%= f.text_field :starts, placeholder: "YYYY-MM-DD"%>
    <br>
    <%= f.label :ends %>
    <%= f.text_field :ends, placeholder: "YYYY-MM-DD"%>
    <%= f.hidden_field :patient_id, placeholder: @patient.id%>
    <br>
    <%= f.submit "Create Prescription" %>






<% end %>